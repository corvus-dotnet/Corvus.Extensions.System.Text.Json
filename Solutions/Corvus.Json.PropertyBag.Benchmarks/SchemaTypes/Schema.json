{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "title": "Endpoint configuration",
  "$id": "http://endjin.com/schemas/request-broker/endpoint-config",
 
  "$defs": {
    "ObjectInPropertyBag": {
      "required": [
        "intValue",
        "boolValue",
        "stringValue"
      ],
      "additionalProperties": false,
      "properties": {
        "intValue": {
          "type": "integer",
          "format": "int32"
        },
        "int64Value": {
          "type": "integer",
          "format": "int64"
        },
        "boolValue": {
          "type": "boolean"
        },
        "stringValue": {
          "type": "string"
        },
        "type": {
          "format": "url",
          "type": "string"
        }
      }
    }
  }
}